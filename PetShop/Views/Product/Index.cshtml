@using PetShop.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@if (Model is null)
{

    <h2>Invalido</h2>

}
else
{

}

<!DOCTYPE html>
<html>
<head>
    <title>@Model.Title</title>

    <!--Links para bootstrap-->
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css" />

    <!--Mis links Css-->
    <link href="~/Content/CSS/GeneralStyles.css" type="text/css" rel="stylesheet" />
</head>
<body>

    <div class="container pt-60">
        <div class="productContainer row">
            <div class="imgContainerProduct col-6">
                <!--Carrusel-->
                <div id="carouselExampleIndicators" class="carousel slide carousel-size carousel-top-margin" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                    </ol>
                    <div class="carousel-inner img-fluid ">
                        <div class="carousel-item active">
                            <img src="~/Images/Products/Nivel1/Juguete1/138312628-origpic-c12567.jpg" class="img-responsive carousel-size img-fluid" alt="...">
                        </div>
                        <div class="carousel-item ">
                            <img src="~/Images/Products/Nivel1/Juguete1/138312628-origpic-06bae4.jpg" class="img-responsive carousel-size img-fluid" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Images/Products/Nivel1/Juguete1/138312628-origpic-34b94c.jpg" class="img-responsive carousel-size img-fluid" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Images/Products/Nivel1/Juguete1/138321060-origpic-953fef.jpg" class="img-responsive carousel-size img-fluid" alt="...">  
                        </div>                        
                        <div class="carousel-item">
                            <img src="~/Images/Products/Nivel1/Juguete1/138321060-origpic-f74c35.jpg" class="img-responsive carousel-size img-fluid" alt="...">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <!--Fin del carusel-->
            </div>
            <div class="txtContainerProduct col-6">
                <h1 class="">@Model.Title</h1>
                <h3 class="">@Model.Price</h3>
                <p>@Model.DescriptionShort</p>
                <p>@Model.Description</p>
                <p>Caracteristicas:</p>
                <ol>
                    <li>@Model.Characteristic1</li>
                    <li>@Model.Characteristic2</li>
                    <li>@Model.Characteristic3</li>
                </ol>
            </div>
            
        </div>
        
    </div>

    <!--Scripts-->
    <script src="~/Scripts/jquery-3.4.1.slim.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
