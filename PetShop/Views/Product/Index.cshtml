<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>@Model.Title</title>

    <!--Links para bootstrap-->
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css" />

    <!--Mis links Css-->
    <link href="~/Content/CSS/GeneralStyles.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/CSS/SingleProduct.css" rel="stylesheet" />
</head>
<body>

    <div class="container">
        <div class="productContainer   ">
            <div class="marginTop row white_background">
                <div class="col-12 pl-5 borderBottom">
                    <h1>@Model.Title</h1>
                </div>
                <div class="imgContainerProduct col-6 ">
                    <!--Carrusel-->
                    <div id="carouselExampleIndicators" class="carousel slide carousel-size carousel-top-margin" data-ride="carousel">

                        <div class="carousel-inner img-fluid imgCustom">
                            @if (Model.countPhotos == 4)
                            {
                                <ol class="carousel-indicators">
                                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                                </ol>
                                <div class="carousel-item active">
                                    <img src=@Model.Photo1 class="img-responsive carousel-size img-fluid" alt="...">
                                </div>
                                <div class="carousel-item ">
                                    <img src=@Model.Photo2 class="img-responsive carousel-size img-fluid" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src=@Model.Photo3 class="img-responsive carousel-size img-fluid" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src=@Model.Photo4 class="img-responsive carousel-size img-fluid" alt="...">
                                </div>
                            }
                            else if (Model.countPhotos == 2)
                            {
                                <ol class="carousel-indicators">
                                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                </ol>
                                <div class="carousel-item active">
                                    <img src=@Model.Photo1 class="img-responsive carousel-size img-fluid" alt="...">
                                </div>
                                <div class="carousel-item ">
                                    <img src=@Model.Photo2 class="img-responsive carousel-size img-fluid" alt="...">
                                </div>
                            }
                            else if (Model.countPhotos == 1)
                            {
                                <ol class="carousel-indicators">
                                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                    
                                </ol>
                                <div class="carousel-item active">
                                    <img src=@Model.Photo1 class="img-responsive carousel-size img-fluid" alt="...">
                                </div>
                            }
                            else if (Model.countPhotos == 5)
                            {
                                <ol class="carousel-indicators">
                                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                                </ol>
                                <div class="carousel-item active">
                                    <img src=@Model.Photo1 class="img-responsive carousel-size img-fluid" alt="...">
                                </div>
                                <div class="carousel-item ">
                                    <img src=@Model.Photo2 class="img-responsive carousel-size img-fluid" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src=@Model.Photo3 class="img-responsive carousel-size img-fluid" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src=@Model.Photo4 class="img-responsive carousel-size img-fluid" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src=@Model.Photo5 class="img-responsive carousel-size img-fluid" alt="...">
                                </div>
                            }
                            else
                            {
                                <ol class="carousel-indicators">
                                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
                                </ol>
                                <div class="carousel-item active">
                                    <img src=@Model.Photo1 class="img-responsive carousel-size img-fluid" alt="...">
                                </div>
                                <div class="carousel-item ">
                                    <img src=@Model.Photo2 class="img-responsive carousel-size img-fluid" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src=@Model.Photo3 class="img-responsive carousel-size img-fluid" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src=@Model.Photo4 class="img-responsive carousel-size img-fluid" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src=@Model.Photo5 class="img-responsive carousel-size img-fluid" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src=@Model.Photo6 class="img-responsive carousel-size img-fluid" alt="...">
                                </div>
                            }
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <!--Fin del carusel-->
                </div>

                <div class="txtContainerProduct col-6">

                    <p class="boldText">Precio:</p><h3 class="">₡ @Model.Price</h3>
                    <p class="boldText">Descripción:</p><p>@Model.DescriptionShort</p>
                    <p>@Model.Description</p>
                    <p class="boldText">Caracteristicas:</p>

                    @if (Model.countCharacteristic == 1)
                    {
                        <ol>
                            <li>@Model.Characteristic1</li>
                        </ol>
                    }
                    else if (Model.countCharacteristic == 2)
                    {
                        <ol>
                            <li>@Model.Characteristic1</li>
                            <li>@Model.Characteristic2</li>
                        </ol>
                    }
                    else
                    {
                        <ol>
                            <li>@Model.Characteristic1</li>
                            <li>@Model.Characteristic2</li>
                            <li>@Model.Characteristic3</li>
                        </ol>
                    }
                </div>
                <div class="col-12 pl-5 borderBottom">
                    <h1>Video</h1>
                </div>
                <div class="col-12 videoWrapper text-center">
                    <iframe width="500" height="400" src="@Model.Video" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
            </div>
        </div>


    </div>

    <!--Scripts-->
    <script src="~/Scripts/jquery-3.4.1.slim.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>

}

